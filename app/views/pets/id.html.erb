<h1><%= @pet.name %></h1>

<p>
  <img src=<%= @pet.image%> width=250><br>
  Age: <%= @pet.age %><br>
  Sex: <%= @pet.sex %><br>
  Status: <%= @pet.status %><br>
  Discription: <%= @pet.description %><br>
  <%= link_to "Delete Pet", "/pets/#{@pet.id}", method: 'delete'%>
</p>

<form action="/pets/<%= @pet.id %>/edit" method="get">
  <input type="submit" value="Edit Pet">
</form>

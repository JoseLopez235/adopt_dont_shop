<h1>Shelters</h1>

<a href="/shelters/new">New Shelter</a>


<% @shelters.each do |shelter| %>
  <div>
    <br>
    <a href="/shelters/<%= shelter.id %>"> <b><%= shelter.name %></b></a>
    <a href="/shelters/<%= shelter.id %>/edit">Update Shelter</a>
    <%= link_to "Delete Pet", "/shelters/#{shelter.id}", method: 'delete'%>
    <p>
      <%= shelter.address %><br>
      <%= shelter.city %>, <%= shelter.state %><br>
      <%= shelter.zip %><br>
    </p>
  </div>
<% end %>
